@model Project2.Models.Product

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}  
<style>
    body {
        background-color: #fdf1ec;
    }

    .wrapper {
        height: 420px;
        width: 654px;
        margin: 50px auto;
        border-radius: 10px 10px 50px 10px;
        -webkit-box-shadow: 0px 14px 32px 0px rgba(0, 0, 0, 0.15);
        -moz-box-shadow: 0px 14px 32px 0px rgba(0, 0, 0, 0.15);
        box-shadow: 0px 14px 32px 0px rgba(0, 0, 0, 0.15);
    }

    .product-img {
        float: left;
        height: 420px;
        width: 327px;
        overflow: hidden;
    }
        .product-img img {
            transition: all 1.5s ease;
            border-radius: 7px 0 0 7px;
        }

    .product-img:hover img {
        transform: scale(1.1);
    }
       

    .product-info {
        float: left;
        height: 420px;
        width: 327px;
        border-radius: 0 7px 10px 7px;
        background-color: #ffffff;
    }

    .product-text {
        height: 300px;
        width: 327px;
    }

        .product-text h1 {
            margin: 0 0 0 38px;
            padding-top: 52px;
            font-size: 34px;
            color: #474747;
        }

        .product-text h1,
        .product-price-btn p {
            font-family: "Bentham", serif;
        }

        .product-text h2 {
            margin: 0 0 25px 38px;
            font-size: 13px;
            font-family: "Raleway", sans-serif;
            font-weight: 400;
            text-transform: uppercase;
            color: #d2d2d2;
            letter-spacing: 0.2em;
        }

        .product-text p {
            height: 125px;
            margin: 0 0 0 38px;
            font-family: "Playfair Display", serif;
            color: #8d8d8d;
            line-height: 1.7em;
            font-size: 15px;
            font-weight: lighter;
            overflow: hidden;
        }

    .product-price-btn {
        height: 34px;
        width: 327px;
        margin-top: 17px;
        position: relative;
    }

    .product-price-btn p {
            display: inline-block;
            position: absolute;
            top: -13px;
            height: 50px;
            font-family: "Trocchi", serif;
            margin: 0 0 0 38px;
            font-size: 28px;
            font-weight: lighter;
            color: #474747;
            margin-top:-5px;
    }

    span {
        display: inline-block;
        height: 50px;
        font-family: "Suranna", serif;
        font-size: 30px;
        margin-right: 0px;
    }
    .card-stats {
        grid-area: stats;
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: 1fr;
        border-bottom-left-radius: 15px;
        border-bottom-right-radius: 15px;
        background: white;
        cursor: default;
        margin: 10px;
        margin-left:0px;
    }

        .card-stats .stat button {
            margin: -10px;
            margin-left: 20px;
            border: transparent;
            display: flex;
            align-items: end;
            justify-content: center;
            flex-direction: row;
            color: white;
            padding: 0px;
            cursor: default;
            height: 50px;
            width: 140px;
            box-sizing: border-box;
            border-radius: 60px;
            font-family: "Raleway", sans-serif;
            font-size: 14px;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.2em;
            color: #ffffff;
            background-color: #9cebd5;
            cursor: pointer;
            outline: none;
        }
       .card-stats .stat button:hover {
                background-color: #79b0a1;
            }

</style>
<body>
    <div class="wrapper">
        <div class="product-img">
            <img src="@Url.Content(Model.Image)" alt="@Model.Image" height="420" ; width="327" />
        </div>
        <div class="product-info">
            <div class="product-text">
                <h1>@Html.DisplayFor(model => model.Name)</h1>
                <h2>@Html.DisplayFor(model => model.Category.Name)</h2>
                <p>@Html.DisplayFor(model => model.Description)</p>
            </div>
            <div class="product-price-btn">
                <p><span>@Html.DisplayFor(model => model.Price)</span>EGP</p>
            </div>
            <div class="card-stats">
                <div class="stat">
                    <button type="button" class="btn btn-primary">UPDATE</button>
                </div>
                <div class="stat">
                    <button type="button" class="btn btn-danger">DELETE</button>
                </div>
            </div>
        </div>
    </div>

</body>

</html>